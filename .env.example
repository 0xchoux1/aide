# AIDE 環境変数設定例
# このファイルを .env にコピーして使用してください

# === 基本設定 ===
AIDE_ENV=development
AIDE_VERSION=3.3.0
AIDE_DEBUG=true

# === ログ設定 ===
AIDE_LOG_LEVEL=INFO
AIDE_LOG_FILE=logs/aide.log
AIDE_LOG_ROTATION=true
AIDE_LOG_MAX_SIZE=10MB
AIDE_LOG_BACKUP_COUNT=5

# === データベース設定 ===
AIDE_DB_TYPE=sqlite
AIDE_DB_PATH=data/aide.db
# PostgreSQL使用時
# AIDE_DB_TYPE=postgresql
# AIDE_DB_HOST=localhost
# AIDE_DB_PORT=5432
# AIDE_DB_NAME=aide
# AIDE_DB_USER=aide
# AIDE_DB_PASSWORD=your_password

# === Redis設定（キャッシュ用） ===
AIDE_REDIS_ENABLED=false
AIDE_REDIS_HOST=localhost
AIDE_REDIS_PORT=6379
AIDE_REDIS_DB=0
AIDE_REDIS_PASSWORD=

# === 監視設定 ===
AIDE_MONITORING_ENABLED=true
AIDE_MONITORING_PORT=8000
AIDE_MONITORING_HOST=0.0.0.0
AIDE_HEALTH_CHECK_INTERVAL=30
AIDE_METRICS_RETENTION_HOURS=24

# === セキュリティ設定 ===
AIDE_SECRET_KEY=your-secret-key-here
AIDE_ENCRYPTION_ENABLED=true
AIDE_AUTH_TIMEOUT=3600
AIDE_MAX_LOGIN_ATTEMPTS=5

# === API設定 ===
AIDE_API_ENABLED=true
AIDE_API_PORT=8080
AIDE_API_HOST=0.0.0.0
AIDE_API_DOCS_ENABLED=true

# === 最適化設定 ===
AIDE_OPTIMIZATION_ENABLED=true
AIDE_OPTIMIZATION_LEVEL=balanced
AIDE_OPTIMIZATION_SCHEDULE=0 */6 * * *
AIDE_AUTO_OPTIMIZATION=false

# === 通知設定 ===
AIDE_NOTIFICATIONS_ENABLED=true
AIDE_EMAIL_ENABLED=false
AIDE_EMAIL_SMTP_HOST=smtp.gmail.com
AIDE_EMAIL_SMTP_PORT=587
AIDE_EMAIL_USERNAME=your_email@gmail.com
AIDE_EMAIL_PASSWORD=your_app_password
AIDE_EMAIL_FROM=aide@your-org.com

AIDE_SLACK_ENABLED=false
AIDE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
AIDE_SLACK_CHANNEL=#aide-alerts

# === Prometheus統合 ===
AIDE_PROMETHEUS_ENABLED=false
AIDE_PROMETHEUS_PORT=9090
AIDE_PROMETHEUS_METRICS_PATH=/metrics

# === 外部システム統合 ===
AIDE_GITHUB_TOKEN=
AIDE_JIRA_URL=
AIDE_JIRA_USERNAME=
AIDE_JIRA_TOKEN=

# === AI/ML設定 ===
AIDE_AI_ENABLED=true
AIDE_AI_MODEL_PATH=models/
AIDE_AI_CACHE_ENABLED=true

# === 開発環境設定 ===
AIDE_DEV_MODE=true
AIDE_DEV_RELOAD=true
AIDE_DEV_DEBUG_TOOLBAR=true

# === テスト設定 ===
AIDE_TEST_DB_PATH=:memory:
AIDE_TEST_LOG_LEVEL=DEBUG
AIDE_TEST_MOCK_EXTERNAL=true

# === パフォーマンス設定 ===
AIDE_MAX_WORKERS=4
AIDE_ASYNC_POOL_SIZE=100
AIDE_CACHE_TTL=3600
AIDE_MEMORY_LIMIT=1GB